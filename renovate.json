{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "fileMatch": ["^.*.go$"],
      "matchStrings": [
        "From\\(\"(?<depName>(.*)):(?<currentValue>.*)(@(?<currentDigest>.*))?\"\\)"
      ],
      "autoReplaceStringTemplate": "From(\"{{{depName}}}:{{{newValue}}}@{{{newDigest}}}\")"
    }
  ],
  "gomod": {
    "enabled": false
  }
}
